<!-- Page Header -->
<header class="masthead" style="background-image: url(<%= asset_path 'contact-bg.jpg' %>">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="page-heading">
          <h1>Edit Post</h1>
          <span class="subheading">Edit Your Post</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <p>Edit Your Posts!</p>
      
      <%= form_for(@post, id: "contactForm") do |f| %>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control", value: "#{@post.title}" %>
            <!--<input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter title.">-->
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <%= f.label :contents %>
            <%= f.text_area :contents, size: "24x5", class: "form-control", value: "#{@post.contents}" %>
            
            <!--<textarea rows="5" class="form-control" placeholder="Message" id="message" required data-validation-required-message="Please enter a message."></textarea>-->
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="form-group">
            <%= submit_tag("Submit", class: "btn btn-primary", id: "sendMessageButton") %>
          <!--<button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>-->
        </div>
      <% end %>
    </div>
  </div>
</div>

<hr>